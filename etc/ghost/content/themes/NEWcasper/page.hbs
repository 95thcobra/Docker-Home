{{!< default}}

{{#post}}

  <article class="{{post_class}}">
    <header>
        {{#if feature_image}}<img id="post-image" src="{{img_url feature_image}}" alt="{{title}}">{{/if}}
        <h1 id="post-title">{{title}}</h1>
    </header>

    <div id="post-content" class="{{post_class}}">
      {{content}}
    </div>

  </article>

{{/post}}
